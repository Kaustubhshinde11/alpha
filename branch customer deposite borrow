INSERT INTO Branch (bname, city)
VALUES
('Perryridge', 'New York'),
('Redwood', 'San Francisco'),
('Maple', 'Los Angeles');
-- Insert data into the 'Customers' table
INSERT INTO Customers (cname, city)
